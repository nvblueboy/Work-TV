<TimeZoneApp>
	headline:root.headline
	caption:root.caption
	size_hint:(1,.8)
	pos_hint:{"top":1}
	BoxLayout:
		orientation:'vertical'
		canvas.before:
			Color: 
				rgba:1,1,1,1
			Rectangle:
				size:self.size
		BoxLayout:
			Label:
				text:root.date
				color: (.196,.416,.702,1)
				font_name:"./fonts/Roboto-Light.ttf"
				font_size:'100sp'
		BoxLayout:
			TimeZone:
				text:root.pacific
				zone:"Pacific"
			TimeZone:
				text:root.mountain
				zone:"Mountain"
		BoxLayout:
			TimeZone:
				text:root.central
				zone:"Central"
			TimeZone:
				text:root.eastern
				zone:"Eastern"

<TimeZone>
	text:""
	zone:""
	RelativeLayout:
		canvas.before:
			Color: 
				rgba:1,1,1,1
			Rectangle:
				size:self.size
		Label:
			text:root.text
			color: (.196,.416,.702,1)
			size:self.size
			font_name:"./fonts/Roboto-Light.ttf"
			font_size:'100sp'
			pos_hint:{'top':1.25}
		Label:
			text:root.zone
			color: (.196,.416,.702,1)
			size:self.size
			font_name:"./fonts/Roboto-Thin.ttf"
			font_size:'100sp'
			pos_hint:{'top':.9}