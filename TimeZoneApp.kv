<TimeZoneApp>
	headline:root.headline
	caption:root.caption
	BoxLayout:
		orientation:'vertical'
		canvas.before:
			Color: 
				rgba:1,1,1,1
			Rectangle:
				size:self.size
		BoxLayout:
			TimeZone:
				text:root.pacific
				zone:"Pacific"
			TimeZone:
				text:root.mountain
				zone:"Mountain"
		BoxLayout:
			TimeZone:
				text:root.central
				zone:"Central"
			TimeZone:
				text:root.eastern
				zone:"Eastern"
		Label:
			text:"Monday, January 8th, 2018"
			color: (.196,.416,.702,1)
			size:self.size
			font_name:"./fonts/Roboto-Light.ttf"
			font_size:'100sp'

<TimeZone>
	text:""
	zone:""
	RelativeLayout:
		Label:
			text:root.text
			color: (.196,.416,.702,1)
			size:self.size
			font_name:"./fonts/Roboto-Medium.ttf"
			font_size:'100sp'
			pos_hint:{'top':1}
		Label:
			text:root.zone
			color: (.196,.416,.702,1)
			size:self.size
			font_name:"./fonts/Roboto-Light.ttf"
			font_size:'100sp'
			pos_hint:{'top':.6}