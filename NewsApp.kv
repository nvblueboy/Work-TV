<NewsApp>
	headline:root.headline
	caption:root.caption
	article_headline:"Loading article..."
	article_source:""
	FloatLayout:
		AsyncImage:
			id:image
			source: root.article_source
			allow_stretch:True

			pos_hint: {'center_x': .5, 'center_y': .5}
	RelativeLayout:
		Label:
			text: root.article_headline
			color: 1,1,1,1
			outline_color: 0,0,0,1
			font_size:"90sp"
			font_name:"./fonts/Roboto-Light.ttf"
			outline_width: 2
			size:self.size
			size_hint:(.9,.75)
			pos_hint:{"top":.97, "right":.97}
			text_size: self.width, self.height
			halign: "right"
			valign: "top"