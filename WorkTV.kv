#: include ImageApp.kv
#: include TimeZoneApp.kv
#: include WeatherApp.kv
#: include TrafficApp.kv
#: include TrafficTimeApp.kv
#: include NewsApp.kv
#: include SalesforceStatusApp.kv

<AppContainer>
	canvas.before:
		Color: 
			rgba:1,1,1,1
		Rectangle:
			size:self.size
	Carousel:
		id:Carousel
		loop:True



<BottomRibbon>
	RelativeLayout:
		canvas.before:
			Color:
				rgba: .196,.416,.702,.75
			Rectangle:
				pos: self.pos
				size:self.size
		LogoBox:
			pos_hint:{'right':1, 'top':.9}
			size_hint:(.35,.8)
		CaptionBox:
			id:captionBox
			pos_hint:{'right':.6, 'top':.95}
			size_hint:(.55,.95)

<LogoBox>
	RelativeLayout:
		canvas.before:
			Color:
				rgba: 1,0,0,0
			Rectangle:
				size:self.size
		Image:
			source:'SA.png'
			allow_stretch:True

<CaptionBox>
	RelativeLayout:
		canvas.before:
			Color:
				rgba:1,0,0,0
			Rectangle:
				size:self.size
		Label:
			text:root.headline
			halign:'left'
			valign:'center'
			text_size:self.size
			font_size:'90sp'
			font_name:'./fonts/Roboto-Light.ttf'
			pos_hint:{'top':1}
			size_hint:(1,.5)
		Label:
			text:root.caption
			halign:'left'
			valign:'center'
			text_size:self.size
			font_size:'40sp'
			font_name:'./fonts/Roboto-Light.ttf'
			pos_hint:{'top':.5}
			size_hint:(1,.3)
		Label:
			text:root.weather
			halign:'left'
			valign:'center'
			text_size:self.size
			font_size:'30sp'
			font_name:'./fonts/Roboto-Thin.ttf'
			pos_hint:{'top':.2}
			size_hint:(1,.2)

<WorkTV>
	RelativeLayout:
		AppContainer:
			size:self.size
			id:appContainer
		BottomRibbon:
			id:bottomRibbon
			size_hint: (1,.2)
			pos_hint: {'top':.2}
